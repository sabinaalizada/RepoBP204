namespace ConsoleApp12
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int number = Convert.ToInt32(Console.ReadLine());
            int temp;
            int number1;
            number1 = number;
            int a = 0;
            
            Console.WriteLine("Hello, World!");
            do
            {
                    temp = number % 10;
                    a = a * 10 + temp;
                    number = number / 10;
                
            } while (number > 0);
            if (number1 == a)
            {
                Console.WriteLine("polidrom");
            }
            else
            {
                Console.WriteLine("not polidrom");
            }
            
        }
    }
}
